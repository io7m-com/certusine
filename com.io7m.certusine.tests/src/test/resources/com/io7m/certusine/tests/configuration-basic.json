{
  "%Schema": "https://www.io7m.com/software/certusine/config-1.json",

  "Options": {
    "DNSWaitTime": "PT5M",
    "CertificateStore": "store.db",
    "CertificateExpirationThreshold": "PT72H"
  },

  "Accounts": [
    {
      "Name": "main",
      "PublicKeyPath": "fake.pub",
      "PrivateKeyPath": "fake.pri",
      "AcmeURI": "acme://localhost:20000/"
    }
  ],

  "Outputs": [
    {
      "Type": "directory",
      "Name": "main-output",
      "Parameters": [
        {
          "Name": "path",
          "Value": "/tmp"
        }
      ]
    }
  ],

  "DNSConfigurators": [
    {
      "Type": "vultr",
      "Name": "vultr-dns",
      "Parameters": [
        {
          "Name": "api-key",
          "Value": "abcd"
        },
        {
          "Name": "domain",
          "Value": "example.com"
        }
      ]
    }
  ],

  "Domains": [
    {
      "Name": "example.com",
      "Account": "main",
      "Certificates": [
        {
          "Name": "www",
          "PublicKeyPath": "fake.pub",
          "PrivateKeyPath": "fake.pri",
          "Hosts": [
            "www0.example.com",
            "www1.example.com",
            "www2.example.com"
          ]
        },
        {
          "Name": "mail",
          "PublicKeyPath": "fake.pub",
          "PrivateKeyPath": "fake.pri",
          "Hosts": [
            "mail0.example.com",
            "mail1.example.com"
          ]
        },
        {
          "Name": "wildcard",
          "PublicKeyPath": "fake.pub",
          "PrivateKeyPath": "fake.pri",
          "Hosts": [
            "*.example.com"
          ]
        }
      ],
      "Outputs": [
        "main-output"
      ],
      "DNSConfigurator": "vultr-dns"
    }
  ]
}